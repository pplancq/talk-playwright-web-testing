{
  "name": "@pplancq/talk-playwright-web-testing",
  "private": true,
  "version": "0.1.0",
  "license": "MIT",
  "description": "Exploring Strengths, Weaknesses, and Best Practices for Web Testing",
  "packageManager": "npm@11.8.0",
  "scripts": {
    "start": "rsbuild dev",
    "build": "rsbuild build",
    "preview": "rsbuild preview",
    "lint": "node scripts/lint.js",
    "lint:eslint": "eslint \"{public,src}/**/*.{js,jsx,mjs,ts,tsx,mts}\"",
    "lint:eslint:fix": "eslint \"{public,src}/**/*.{js,jsx,mjs,ts,tsx,mts}\" --fix",
    "lint:stylelint": "stylelint \"src/**/*.{scss,css}\"",
    "lint:stylelint:fix": "stylelint \"src/**/*.{scss,css}\" --fix",
    "lint:prettier": "prettier \"{public,src}/**/*.!(js|jsx|mjs|ts|tsx|mts|scss|css)\" --check --ignore-unknown",
    "lint:prettier:fix": "prettier  \"{public,src}/**/*.!(js|jsx|mjs|ts|tsx|mts|scss|css)\" --write --ignore-unknown",
    "lint:tsc": "tsc --noEmit",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "codegen": "playwright codegen",
    "package:check": "npm exec --yes package-lock-utd@1.1.3",
    "prepare": "husky"
  },
  "homepage": "https://pplancq.github.io/talk-playwright-web-testing",
  "dependencies": {
    "@pplancq/svg-react": "^2.2.1",
    "clsx": "^2.1.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "reveal.js": "^5.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@playwright/test": "^1.58.0",
    "@pplancq/commitlint-config": "^2.3.3",
    "@pplancq/eslint-config": "^5.0.22",
    "@pplancq/postcss-config": "^3.0.0",
    "@pplancq/prettier-config": "^1.2.9",
    "@pplancq/stylelint-config": "^4.1.0",
    "@rsbuild/core": "^1.7.2",
    "@rsbuild/plugin-react": "^1.4.3",
    "@rsbuild/plugin-sass": "^1.5.0",
    "@types/node": "^24.10.9",
    "@types/react": "^19.2.9",
    "@types/react-dom": "^19.2.3",
    "@types/reveal.js": "^5.2.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-plugin-prettier": "^5.5.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "stylelint": "^17.0.0",
    "stylelint-prettier": "^5.0.3",
    "tsc-files": "^1.1.4",
    "typescript": "^5.9.3"
  }
}

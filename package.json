{
  "name": "@pplancq/talk-playwright-web-testing",
  "private": true,
  "version": "0.1.0",
  "license": "MIT",
  "description": "Exploring Strengths, Weaknesses, and Best Practices for Web Testing",
  "scripts": {
    "start": "rsbuild dev",
    "build": "rsbuild build",
    "preview": "rsbuild preview",
    "lint": "node scripts/lint.js",
    "lint:eslint": "eslint \"{public,src}/**/*.{js,jsx,mjs,ts,tsx,mts}\"",
    "lint:eslint:fix": "eslint \"{public,src}/**/*.{js,jsx,mjs,ts,tsx,mts}\" --fix",
    "lint:stylelint": "stylelint \"src/**/*.{scss,css}\"",
    "lint:stylelint:fix": "stylelint \"src/**/*.{scss,css}\" --fix",
    "lint:prettier": "prettier \"{public,src}/**/*.!(js|jsx|mjs|ts|tsx|mts|scss|css)\" --check --ignore-unknown",
    "lint:prettier:fix": "prettier  \"{public,src}/**/*.!(js|jsx|mjs|ts|tsx|mts|scss|css)\" --write --ignore-unknown",
    "lint:tsc": "tsc --noEmit",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "codegen": "playwright codegen",
    "package:check": "npm exec --yes package-lock-utd@1.1.3",
    "prepare": "husky"
  },
  "homepage": "https://pplancq.github.io/talk-playwright-web-testing",
  "dependencies": {
    "@pplancq/svg-react": "^2.0.2",
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "reveal.js": "^5.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@playwright/test": "^1.54.1",
    "@pplancq/commitlint-config": "^2.2.3",
    "@pplancq/eslint-config": "^4.2.3",
    "@pplancq/postcss-config": "^2.1.14",
    "@pplancq/prettier-config": "^1.2.7",
    "@pplancq/stylelint-config": "^4.0.1",
    "@rsbuild/core": "^1.4.6",
    "@rsbuild/plugin-react": "^1.3.4",
    "@rsbuild/plugin-sass": "^1.3.3",
    "@types/node": "^22.16.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/reveal.js": "^5.2.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.30.1",
    "eslint-plugin-prettier": "^5.5.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "stylelint": "^16.21.1",
    "stylelint-prettier": "^5.0.3",
    "tsc-files": "^1.1.4",
    "typescript": "^5.8.3"
  },
  "volta": {
    "node": "22.17.0",
    "npm": "11.4.2"
  }
}

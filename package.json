{
  "name": "playwright-web-testing",
  "version": "0.1.0",
  "license": "MIT",
  "description": "Exploring Strengths, Weaknesses, and Best Practices for Web Testing",
  "scripts": {
    "start": "webpack serve",
    "build": "webpack --mode production",
    "lint": "node scripts/lint.js",
    "lint:eslint": "eslint \"{public,src}/**/*.{js,jsx,mjs,ts,tsx}\"",
    "lint:eslint:fix": "eslint \"{public,src}/**/*.{js,jsx,mjs,ts,tsx}\" --fix",
    "lint:stylelint": "stylelint \"src/**/*.{scss,css}\"",
    "lint:stylelint:fix": "stylelint \"src/**/*.{scss,css}\" --fix",
    "lint:prettier": "prettier \"{public,src}/**/*.!(js|jsx|mjs|ts|tsx|scss|css)\" --check --ignore-unknown",
    "lint:prettier:fix": "prettier \"{public,src}/**/*.!(js|jsx|mjs|ts|tsx|scss|css)\" --write --ignore-unknown",
    "lint:tsc": "tsc --noEmit",
    "package:check": "npm exec --yes package-lock-utd@1.1.3",
    "prepare": "husky"
  },
  "homepage": "https://pplancq.github.io/playwright-web-testing",
  "dependencies": {
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "reveal.js": "^5.2.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@pplancq/commitlint-config": "^2.2.2",
    "@pplancq/eslint-config": "^4.0.17",
    "@pplancq/postcss-config": "^2.1.9",
    "@pplancq/prettier-config": "^1.2.3",
    "@pplancq/stylelint-config": "^3.1.0",
    "@pplancq/webpack-config": "^1.9.8",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.1",
    "@types/reveal.js": "^5.0.5",
    "concurrently": "^9.1.2",
    "eslint": "^9.23.0",
    "eslint-plugin-prettier": "^5.2.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "stylelint": "^16.17.0",
    "stylelint-prettier": "^5.0.3",
    "tsc-files": "^1.1.4",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.1"
  },
  "volta": {
    "node": "22.14.0",
    "npm": "11.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
